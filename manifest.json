{
  "name": "Searchy",
  "description": "'Searchy...': Open a search engine with [selection]",
  "version": "0.2",
  "permissions": [
    "contextMenus",
    "chrome://favicon/*",
    "storage",
    "downloads",
    "tabs"
  ],
  "background": {
    "page": "background/background.html"
  },
  "browser_action": {
    "default_icon": "icons/search128r.png",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "icons/search128r.png"
  },
  "chrome_url_overrides": {
    "newtab": "search/search.html"
  },
  "options_page": "options/options.html",
  "manifest_version": 2
}
